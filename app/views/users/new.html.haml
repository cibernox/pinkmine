- remote ||= false
= simple_form_for user, html: { class: 'form-horizontal', id: 'signupForm' } do |f|
  .row-fluid
    .span2
    .span8
      %fieldset
        %legend Datos de usuario
        .row-fluid
          .margin-1em
            .span6
              = f.input :username
              = f.input :email
            .span6
              = f.input :password
              = f.input :password_confirmation
  / .row-fluid.margin-1em
  /   .span2
  /   .span8
  /     %fieldset
  /       %legend Datos personales
  /       .row-fluid
  /         .margin-1em
  /           .span6
  /             = f.input :username #, input_html: { class: 'input-xlarge' }
  /             = f.input :email #, input_html: { class: 'input-xlarge' }
  /           .span6
  /             = f.input :password
  /             = f.input :password_confirmation
  .row-fluid
    .span2
    .span8
      .text-center
        = f.button :submit, 'Enviar', class: 'btn-primary'
      .text-right.margin-1em.subindex
        ¿Ya está registrado? Accede #{ link_to 'aquí', login_path }